@* @page "/launcher" *@
@using MudBlazor.Extensions.Options
@inject IDialogService DialogService

<MudButton Variant="Variant.Filled" StartIcon="@Icons.Material.Filled.Calculate"
           Color="Color.Primary" OnClick="ShowSampleDialogs">
  Calculator
</MudButton>

@code {
  private void OpenCalculator()
  {
    DialogOptionsEx dlgOptions = new()
    {
      MaximizeButton = true,
      CloseButton = true,
      CloseOnEscapeKey = true,
      MaxWidth = MaxWidth.Medium,
      FullWidth = true,
      Resizeable = true,
      DragMode = MudDialogDragMode.SnapDrag,
      DisableSizeMarginY = true,
      DisablePositionMargin = true
    };
    DialogService.ShowExAsync<Window>("Simple Window", dlgOptions);
   

    // DialogService.Show<CalculatorApp>("Calculator", options);
  }


  private Task ShowSampleDialogs()
  {
    int count = 1;
    var rnd = new Random();
    foreach (var i in Enumerable.Range(1, count))
    {
      _ = DialogService.ShowExAsync<Window>($"Simple Dialog {i}", dialog => { dialog.Title = $"{"Hello from dialog"} {i}"; }, new DialogOptionsEx()
      {
        Position = (DialogPosition)rnd.Next(0, 9),
        Animation = (AnimationType)rnd.Next(1, 25),
        DragMode = MudDialogDragMode.Simple,
        CloseButton = true,
        MinimizeButton = true,
        Resizeable = true,
        Modal = false
      });
    }
    return Task.CompletedTask;
  }

}
