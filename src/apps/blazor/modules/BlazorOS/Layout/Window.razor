<MudExDialog>
  <DialogContent>
    <MudExSplitPanel>
      <Left>
        <MudExSplitPanelItem Style="width: 50%; min-width:450px; height: 50%; min-height:300px; background-color: forestgreen">
          <center>Left part in MudExSplitPanel. (Notice you can also use MudExSplitter directly)</center>
        </MudExSplitPanelItem>
      </Left>
      <Right>
        <MudExSplitPanelItem Style="width: 50%; min-width:450px; height: 50%; min-height:300px; background-color: red">
          <center>Right part in MudExSplitPanel.</center>
        </MudExSplitPanelItem>
      </Right>
    </MudExSplitPanel>
  </DialogContent>
  <DialogActions>
    <MudButton Color="Color.Primary" Variant="Variant.Filled">Close</MudButton>
  </DialogActions>
</MudExDialog>
