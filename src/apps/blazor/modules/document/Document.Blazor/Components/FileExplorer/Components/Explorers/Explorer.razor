@using FSH.Starter.Blazor.Modules.Document.Blazor.Components.FileExplorer.Components.Explorers.Views.Default
@using FSH.Starter.Blazor.Modules.Document.Blazor.Components.FileExplorer.Components.Explorers.Views.Tabular
<div>
  Current Folder Items: @CurrentFolder.Files.Count
</div>

@switch (ExplorerType)
{
  case EnumExplorerType.DefaultExplorer:
    <DefaultExplorerFileView>
      @Render()
    </DefaultExplorerFileView>
    break;
  case EnumExplorerType.TabularExplorer:
    <TabularExplorerFileView>
      @Render()
    </TabularExplorerFileView>
    break;
  default:
    break;
}